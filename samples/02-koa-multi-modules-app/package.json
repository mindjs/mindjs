{
  "name": "framework100500-sample-koa-multi-module-app",
  "version": "1.0.0",
  "description": "Sample app of framework100500 usage with koa.js server",
  "main": "index.js",
  "scripts": {
    "start:env": "npm run start:env:pm2-runtime",
    "start:env:pm2": "npm run pm2:kill && pm2 start index.js -i 0",
    "start:env:pm2-runtime": "pm2-runtime start index.js -i 0",
    "start:dev:pm2": "npm run pm2:kill && pm2 start index.js --watch=\"src\" --no-daemon --node-args=\"--inspect\" -i 1 -f",
    "start:dev:nodemon": "nodemon --inspect index.js -w ./src -L",
    "pm2:kill": "pm2 kill"
  },
  "author": "Oleksandr Bondarenko",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "@framework100500/common": "1.0.0",
    "@framework100500/core": "1.0.0",
    "@framework100500/routing": "1.0.0",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^5.1.0",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa-redis": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-sslify": "^4.0.3",
    "koa2-ping": "^0.3.0",
    "@koa/cors": "^3.0.0",
    "pm2": "^3.5.1"
  }
}
