{
  "moduleFileExtensions": [
    "js"
  ],
  "rootDir": "src/",
  "testRegex": ".*\\.(spec|test).js$",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.js"
  ],
  "coverageReporters": ["lcov", "text"],
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    ".*\\.(mock|stub).js$",
    ".*\\.module.js$",
    ".*\\DI.tokens.js$",
    "main.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 25,
      "functions": 25,
      "lines": 25,
      "statements": 25
    }
  }
}
