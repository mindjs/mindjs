{
  "name": "framewroks100500-repository",
  "version": "1.3.0",
  "private": true,
  "description": "Framework100500 is a simple web API pure Node.js framework",
  "main": "packages/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "diff": "lerna diff",
    "new-version": "lerna version --conventional-commits --yes",
    "publish": "lerna publish --conventional-commits --yes",
    "publish:beta": "npm run publish -- --dist-tag=beta",
    "lint": "eslint -c eslintConfig.json packages --no-eslintrc --ignore-pattern \"*.spec.js\" --ignore-pattern \"*.test.js\" --ignore-pattern \"node_modules\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --config=jest.config.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/framework100500/framework100500.git"
  },
  "keywords": [
    "web",
    "http",
    "https",
    "routing",
    "restify",
    "restify.js",
    "express.js",
    "express",
    "koa.js",
    "koa",
    "node.js",
    "API",
    "framework",
    "dependency injection",
    "DI",
    "injection-js",
    "jest.js",
    "nest.js",
    "angular.js",
    "angular",
    "IOC",
    "inversion of control",
    "REST"
  ],
  "author": "Oleksandr Bondarenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/framework100500/framework100500/issues"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "homepage": "https://github.com/framework100500/framework100500#README",
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-plugin-node": "^9.2.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4"
  },
  "dependencies": {
    "debug": "4.1.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
